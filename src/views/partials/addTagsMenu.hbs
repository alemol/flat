<div class="card">
    <div class="card-body" id="fullWatch">
        <div>
            <h3 class="text-center p-3">Add new tag</h3>
        </div>
        <form action="/interviews/addtag" method="POST" id="frmAddTagMenu">
            <div class="form-group">
                <label for="optCategory">Select category</label>
                <select class="custom-select" name="optCategory" id="optCategory">
                    <option selected value="add new">Add new</option>
                    {{#each categories as |category|}}
                    <option value="{{category.color}}">{{category.title}}</option>
                    {{/each}}

                </select>
            </div>
            <div class="form-group">
                <textarea name="contents" class="form-control" rows="2" placeholder="content" id="result"></textarea>
            </div>
            <div class="form-group" id="ctrTitle"><input type="text" class="form-control" id="inpTitle"
                    placeholder="Title"></div>
            <div class="form-group">
                <label for="selectedColor">Proximo color de etiqueta</label>
                <input type="color" name="selectedColor" id="selectedColor" class="form-control" value="#ffffff">
            </div>
            <div class="btn btn-success" id="btnSave">
                Save
            </div>
            <div class="btn btn-primary" id="addColor">
                Tag
            </div>
            <div class="state" id="stateAjax">
            </div>
        </form>

    </div>
</div>