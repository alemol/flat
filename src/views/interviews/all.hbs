<div class="container p-4">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdownOrder"
                aria-controls="navbarNavDropdownOrder" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdownOrder">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkOrd"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Order by
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLinkOrd">
                            <a class="dropdown-item" href="/interviews/Interview">Interview</a>
                            <a class="dropdown-item" href="/interviews/Subject">Subject</a>
                            <a class="dropdown-item" href="/interviews/Interviewer">Interviewer</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownDown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Download
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownDown">
                            <a class="dropdown-item" href="/interviews/download/allJSON">All Interviews as JSON (clean)</a>
                            <a class="dropdown-item" href="/interviews/download/allTags">All tags as JSON</a>
                            <div class="dropdown-divider"></div>
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownDownFiltered" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                All from category
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownDownFiltered">
                                {{#each Categories as |category|}}
                                <a class="dropdown-item" href="/interviews/Download/Fcategory/{{category.id_cat_tag}}">{{category.title}}</a>
                                {{else}}
                                <a class="dropdown-item" href="#">No Categories</a>
                                {{/each}}
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="row">
        {{#each Interviews}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a href="/interviews/watch/{{idInterview}}">
                        <h3 class="card-title text-uppercase">
                            Interview {{idInterview}}
                        </h3>
                    </a>
                    <p class="m-2"><span>subject:</span>{{idSubject}}<br><span>interviewer:</span>{{idInterviewer}}</p>
                    <p class="m-2">{{date}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card cardbody text-center">
                <p>There are no interviewa saved yet</p>
                <a href="interviews/add">Create one!</a>
            </div>
        </div>
        {{/each}}

    </div>
</div>